<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boyouquan.dao.BlogIntimacySearchHistoryDaoMapper">
    <sql id="insert_columns">
        source_blog_domain_name,
        target_blog_domain_name,
        path_length,
        ip_address,
        searched_at
    </sql>
    <sql id="select_columns">
        id,
        source_blog_domain_name as sourceBlogDomainName,
        target_blog_domain_name as targetBlogDomainName,
        path_length as pathLength,
        ip_address as ipAddress,
        searched_at as searchedAt
    </sql>
    <select id="listLatest" resultType="com.boyouquan.model.BlogIntimacySearchHistory">
        SELECT
        <include refid="select_columns"/>
        FROM blog_intimacy_search_history
        ORDER BY searched_at DESC
        LIMIT #{size}
    </select>
    <insert id="save">
        INSERT INTO blog_intimacy_search_history (
        <include refid="insert_columns"/>
        ) VALUES (
        #{sourceBlogDomainName},
        #{targetBlogDomainName},
        #{pathLength},
        #{ipAddress},
        now()
        )
    </insert>
</mapper>